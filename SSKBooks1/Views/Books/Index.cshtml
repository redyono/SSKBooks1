@model IEnumerable<SSKBooks.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<!-- 🔍 Search Form -->
<form method="get" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label">Search by Title</label>
            <input type="text" name="searchTerm" class="form-control"
                   value="@ViewContext.HttpContext.Request.Query["searchTerm"]" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Author</label>
            <select name="authorId" class="form-select">
                <option value="">All</option>
                @foreach (var author in (SelectList)ViewData["Authors"])
                {
                    <option value="@author.Value"
                            selected="@(ViewContext.HttpContext.Request.Query["authorId"] == author.Value ? "selected" : null)">
                        @author.Text
                    </option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label class="form-label">Category</label>
            <select name="categoryId" class="form-select">
                <option value="">All</option>
                @foreach (var category in (SelectList)ViewData["Categories"])
                {
                    <option value="@category.Value"
                            selected="@(ViewContext.HttpContext.Request.Query["categoryId"] == category.Value ? "selected" : null)">
                        @category.Text
                    </option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Author.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        <text> | </text>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
